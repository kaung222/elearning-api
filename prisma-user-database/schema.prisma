generator client {
  provider = "prisma-client-js"
 output = "../prisma-user-database/user-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  name String
  dob DateTime?
  phone String? 
  image String?
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}