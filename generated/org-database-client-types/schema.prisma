generator client {
  provider = "prisma-client-js"
  output   = "../generated/org-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("ORG_DATABASE_URL")
}

enum Role {
  Admin
  Instructor
  Student
  Manager
}

model Profile {
  id             String        @id @default(uuid())
  userId         String
  role           Role
  username       String
  password       String?
  status         ProfileStatus @default(PENDING)
  access_lms     Boolean       @default(true)
  // relations
  organizationId String?
  instructorId   String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  instructor     Instructor?
  createdAt      DateTime      @default(now())

  @@unique([userId, organizationId])
}

enum ProfileStatus {
  PENDING
  ACTIVE
  INACTIVE
}

model Organization {
  id               String       @id @default(uuid())
  name             String
  type             String // university, company, institute, academy, boot camp, nonprofit
  logo             String
  coverImage       String
  description      String
  shortDescription String
  location         String?
  verified         Boolean      @default(false)
  // mission vision 
  specialties      String[]
  mission          String?
  vision           String?
  social           Json
  // relations 
  reviews          Review[]
  stats            OrgStats?
  contact          Contact?
  instructors      Instructor[]
  profiles         Profile[]
}

model OrgStats {
  id               String       @id @default(uuid())
  totalCourses     Int          @default(0)
  totalStudents    Int          @default(0)
  totalInstructors Int          @default(0)
  rating           Float        @default(0)
  reviewCount      Int          @default(0)
  organization     Organization @relation(fields: [organizationId], references: [id])
  organizationId   String       @unique
}

model Contact {
  id             String       @id @default(uuid())
  website        String?
  email          String
  phone          String
  address        String
  city           String
  country        String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @unique
}

model Review {
  id             String        @id @default(uuid())
  username       String
  avatar         String
  rating         Float
  comment        String
  createdAt      DateTime      @default(now())
  // instructor reviews
  instructor     Instructor?   @relation(fields: [instructorId], references: [id])
  instructorId   String?
  // organization
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Instructor {
  id           String           @id @default(uuid())
  name         String
  title        String
  avatar       String
  coverImage   String?
  bio          String?
  shortBio     String
  specialties  String[]
  achievements String[]
  education    String[]
  social       Json
  stats        InstructorStats?

  // relationships 
  reviews        Review[]
  profileId      String        @unique
  profile        Profile       @relation(fields: [profileId], references: [id])
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())
}

model InstructorStats {
  // stats 
  rating        Float      @default(0)
  reviewCount   Int        @default(0)
  totalStudents Int        @default(0)
  totalCourses  Int        @default(0)
  id            String     @id @default(uuid())
  instructor    Instructor @relation(fields: [instructorId], references: [id])
  instructorId  String     @unique
}
