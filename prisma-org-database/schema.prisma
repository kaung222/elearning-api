generator client {
  provider = "prisma-client-js"
 output = "../generated/org-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("ORG_DATABASE_URL")
}

enum OrgType {
  University
  Company
  Institute
  Academy
  BootCamp
  NonProfit  
}

model OrganizationMember {
  id             String       @id @default(uuid())
  userId         String
  role           Role 
  status         MemberStatus @default(PENDING)
  // relations
  organizationId String?
  instructorId   String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  instructor     Instructor?
  @@unique([userId, organizationId])
}

enum MemberStatus {
  PENDING
  ACTIVE
  INACTIVE
}


enum Role {
  STUDENT
  INSTRUCTOR
  ORG_ADMIN
  ORG_STAFF
  INDIVIDUAL_INSTRUCTOR
}


model Organization {
  id               String    @id @default(uuid())    
  name             String
  type             OrgType
  logo             String
  coverImage       String
  description      String
  longDescription  String
  location         String
  website          String?
  email            String
  phone            String
  founded          String
  totalCourses     Int   @default(0)
  totalStudents    Int   @default(0)
  totalInstructors Int   @default(0)
  rating           Float @default(0)
  reviewCount      Int   @default(0)
  specialties      String[]
  featured         Boolean @default(false)
  verified         Boolean @default(false)
  accreditation    String[]
  mission          String?
  vision           String?
  achievements     String[]
  partnerships     String[]
  reviews          Review[]
  stats            OrgStats?
  contact          Contact?
  social           Json
  instructors      Instructor[]
  members          OrganizationMember[]
}

model OrgStats {
  id                 String       @id @default(uuid())
  graduationRate     String?
  employmentRate     String?
  averageSalary      String?
  studentSatisfaction String
  organization       Organization @relation(fields: [organizationId], references: [id])
  organizationId     String       @unique
}

model Contact {
  id             String       @id @default(uuid())
  address        String
  city           String
  state          String
  zipCode        String
  country        String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @unique
}

model Review {
  id        String      @id @default(uuid())
  username  String
  avatar String
  rating    Float
  comment   String
  createdAt DateTime    @default(now())
  // instructor reviews
  instructor Instructor? @relation(fields: [instructorId], references: [id])
  instructorId String?
 // organization
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Instructor {
  id            String    @id @default(uuid())
  name          String
  title         String
  avatar        String
  coverImage    String?
  bio           String
  featured      Boolean?  @default(false)
  longBio       String?
  rating        Float   @default(0)
  totalStudents Int     @default(0)
  totalCourses  Int     @default(0)
  specialties   String[]
  achievements  String[]
  education     String[]
  social        Json
  // relationships 
  workExperience WorkExperience[]
  reviews       Review[]
  stats         InstructorStats?
  organizationMember        OrganizationMember @relation(fields: [memberId],references: [id])
  memberId      String    @unique
  organizationId String?
  organization  Organization? @relation(fields: [organizationId],references: [id])
}

model WorkExperience {
  id            String     @id @default(uuid())
  company       String
  position      String
  duration      String
  instructor    Instructor @relation(fields: [instructorId], references: [id])
  instructorId  String
}

model InstructorStats {
  id              String     @id @default(uuid())
  totalReviews    Int
  responseRate    String
  avgResponseTime String
  instructor      Instructor @relation(fields: [instructorId], references: [id])
  instructorId    String     @unique
}