generator client {
  provider = "prisma-client-js"
  output   = "../generated/enroll-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("ENROLLMENT_DATABASE_URL")
}

model Enrollment {
  id        String  @id @default(uuid())
  courseId  String
  userId    String
  organizationId String
  description String?
  status    EnrollmentStatus  @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
}
